#include <stdio.h>
#include <time.h>

void fill_time(char*, int);
void fill_date(char*);
int input_format();

int main() {
    char time[50], date[100];
    int format = input_format();
    fill_time(time, format);
    fill_date(date);
    printf("Current time: %s\n", time);
    printf("Current date: %s\n", date);
    return 0;
}

int input_format() {
    int format;
    printf("\nChoose the time format: \n");
    printf("\n1. 24 Hour format\n");
    printf("\n2. 12 Hour foramt (default)\n");
    printf("\nMake a choice(1/2): \n");
    scanf("%d", &format);
    return format;
}

void fill_date(char* buffer) {
    time_t raw_time;
    struct tm *current_time;

    time(&raw_time);
    current_time = localtime(&raw_time);
    strftime(buffer, 100, "%A %d/%m/%Y", current_time);
}

void fill_time(char* buffer, int format) {
    time_t raw_time;
    struct tm *current_time;

    time(&raw_time);
    current_time = localtime(&raw_time);
    if (format == 1) {
        strftime(buffer, 50, "%H:%M:%S", current_time); 
    } else {
        strftime(buffer, 100, "%I:%M:%S %p", current_time);
    }
}